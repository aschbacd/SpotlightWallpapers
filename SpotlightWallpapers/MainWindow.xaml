<Window x:Class="SpotlightWallpapers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotlightWallpapers"
        mc:Ignorable="d"
        Title="Spotlight Wallpapers" Height="180" Width="408">
    <Grid>
        <Label Content="Destination path:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxBrowse" Height="23" Margin="10,41,90,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="buttonBrowse" Content="Browse..." Margin="0,41,10,0" VerticalAlignment="Top" Height="23" Click="buttonBrowse_Click" HorizontalAlignment="Right" Width="75"/>
        <Button x:Name="buttonExport" Content="Export" HorizontalAlignment="Right" Margin="0,0,10,10" Width="75" Click="buttonExport_Click" Height="20" VerticalAlignment="Bottom"/>
        <CheckBox x:Name="checkBoxPortrait" Content="Include portrait wallpapers" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
